<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewAvatarPostSearch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/textViewUsernamePostSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#3F51B5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonSubscribePostSearch"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:text="取消关注"
                android:textSize="8sp"
                app:rippleColor="#673AB7" />

            <Button
                android:id="@+id/buttonBlockPostSearch"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="取消屏蔽"
                android:textSize="8dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewTitlePostSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTextPostSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="TextView"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageViewImageSearch"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:srcCompat="@drawable/load" />

        <Button
            android:id="@+id/buttonVoiceSearch"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:gravity="left|center_vertical"
            android:minWidth="150dp"
            android:padding="10dp"
            android:text="语音"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textViewPlacePostSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:gravity="center_vertical"
            android:text="位置"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTimePostSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="10sp" />

            <ImageButton
                android:id="@+id/imageButtonLikeSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                app:srcCompat="@drawable/ic_outline_thumb_up_24" />

            <ImageButton
                android:id="@+id/imageButtonCommentSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                app:srcCompat="@drawable/ic_baseline_comment_24" />

            <ImageButton
                android:id="@+id/imageButtonShareSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:background="#00000000"
                app:srcCompat="@drawable/ic_baseline_share_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewLikePostSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/ic_baseline_thumb_up_24"
            android:gravity="center_vertical"
            android:text="TextView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCommentSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:visibility="visible" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>